#app
  .section
    padding-top 0
    padding-bottom 0

    @media (max-width 350px)
      padding-left 16px
      padding-right 16px

  .tag
    text-transform uppercase
    letter-spacing 1px

  .tags-medium
    .tag
      font-weight 500

  .editor-wrapper
    .quillWrapper
      background-color #fff

      *
        line-height 1.66

      p, ul, ol
        margin-bottom 1em

      ul, ol
        padding-left 0

      ul
        li
          padding-left 0.8em

      ol
        li
          padding-left 1.2em

      .ql-formats
        +$mobile-only()
          margin-right 8px

      &:hover
        .ql-toolbar, .ql-container
          border-color #b5b5b5

      .ql-toolbar, .ql-container
        border-color #dbdbdb

      .ql-toolbar
        border-top-left-radius 4px
        border-top-right-radius 4px
        padding-top 4px
        padding-bottom 0

      .ql-container
        box-shadow inset 0 1px 2px rgba(10,10,10,.1)
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px

      .ql-editor
        min-height 120px
        max-height 300px

        &:active, &:focus
          border-bottom-left-radius 4px
          border-bottom-right-radius 4px
          border-color #3273dc
          box-shadow 0 0 0 0.125em rgba(50,115,220,.25)

  .notification
    &.is-brand
      font-size 18px
      line-height 1.66
      background-color #E0ECFF
      color #005CFF

.toasted-container.top-center
  top 20px !important

.toasted.primary
  +$mobile-only()
    padding-top 5px !important
    padding-bottom 5px !important
    line-height 1.66 !important
    justify-content initial !important
